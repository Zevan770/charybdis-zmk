#include <dt-bindings/zmk/matrix_transform.h>
#include <physical_layouts.dtsi>
#include "charybdis-layouts.dtsi"

/ {
    chosen {
        zmk,physical-layout = &physical_layout0;
    };

    matrix_transform0:  keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <12>;
        rows = <5>;

        map = <
	RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5)  RC(0,11) RC(0,10) RC(0,9) RC(0,8) RC(0,7) RC(0,6)
	RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5)  RC(1,11) RC(1,10) RC(1,9) RC(1,8) RC(1,7) RC(1,6)
	RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5)  RC(2,11) RC(2,10) RC(2,9) RC(2,8) RC(2,7) RC(2,6)
	RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4) RC(3,5)  RC(3,11) RC(3,10) RC(3,9) RC(3,8) RC(3,7) RC(3,6)
	        RC(4,0) RC(4,1) RC(4,2) RC(4,3) RC(4,4)  RC(4,10) RC(4,9)  RC(4,8) RC(4,7) RC(4,6)
        >;
    };

    matrix_transform1:  keymap_transform_1 {
        compatible = "zmk,matrix-transform";
        columns = <12>;
        rows = <5>;
        map = <
	RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5)  RC(1,11) RC(1,10) RC(1,9) RC(1,8) RC(1,7) RC(1,6)
	RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5)  RC(2,11) RC(2,10) RC(2,9) RC(2,8) RC(2,7) RC(2,6)
	RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4) RC(3,5)  RC(3,11) RC(3,10) RC(3,9) RC(3,8) RC(3,7) RC(3,6)
	        RC(4,0) RC(4,1)         RC(4,3)                   RC(4,9)          RC(4,7) RC(4,6)
        >;
    };
    matrix_transform2:  keymap_transform_2{
        compatible = "zmk,matrix-transform";
        columns = <12>;
        rows = <5>;
        map = <
	        RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5)  RC(1,11) RC(1,10) RC(1,9) RC(1,8) RC(1,7)
	        RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5)  RC(2,11) RC(2,10) RC(2,9) RC(2,8) RC(2,7)
	        RC(3,1) RC(3,2) RC(3,3) RC(3,4) RC(3,5)  RC(3,11) RC(3,10) RC(3,9) RC(3,8) RC(3,7)
	        RC(4,0) RC(4,1)         RC(4,3)                   RC(4,9)          RC(4,7) RC(4,6)
        >;
    };
    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        label = "KSCAN";

        diode-direction = "row2col";
		row-gpios
			= <&pro_micro 21 GPIO_ACTIVE_HIGH>
			 ,<&pro_micro 18 GPIO_ACTIVE_HIGH>
			, <&pro_micro 5 GPIO_ACTIVE_HIGH>
			, <&pro_micro 4 GPIO_ACTIVE_HIGH>
			, <&pro_micro 9 GPIO_ACTIVE_HIGH>
            ;
    };
};


// https://github.com/kot149/zenn-contents/blob/main/articles/zmk-auto-mouse-layer.md#%E3%82%AD%E3%83%BC%E5%85%A5%E5%8A%9B%E4%B8%AD%E3%81%AE%E3%82%AA%E3%83%BC%E3%83%88%E3%83%9E%E3%82%A6%E3%82%B9%E3%83%AC%E3%82%A4%E3%83%A4%E3%83%BC%E8%AA%A4%E7%88%86%E9%98%B2%E6%AD%A2
&zip_temp_layer {
    // 需要在输入事件发生后200ms idle，再碰球才会触发 auto_mouse，避免误触发
    require-prior-idle-ms = <200>;
    // 除了这些鼠标键，按下其他按键立刻退出 auto_mouse
    excluded-positions = <
        35 34 33 // h j k
        53 54 55 56 57 // right thumbs

        27 28 29
        39 40
    >;
};

/ {
    split_inputs {
        #address-cells = <1>;
        #size-cells = <0>;

        pmw_split: pmw_split@0 {
            compatible = "zmk,input-split";
            reg = <0>;
        };
    };

    pmw_listener: pmw_listener {
        compatible = "zmk,input-listener";
        status = "disabled";
        device = <&pmw_split>;
    };
};
